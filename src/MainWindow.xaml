<Window
    x:Class="ApplManga.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:ApplManga"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:t="clr-namespace:ApplManga.Controls.PersistentTabControlEx"
    Title="ApplManga"
    Width="1024"
    Height="600"
    MinWidth="1024"
    MinHeight="600"
    Style="{StaticResource MetroWindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Style="{StaticResource GridDefaultStyle}">
        <t:PersistentTabControl
            DisplayMemberPath="TabCaption"
            ItemsSource="{Binding PageViewModels}"
            Style="{StaticResource TabControlStyle}" />
    </Grid>
</Window>