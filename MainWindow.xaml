<Window
    x:Class="ApplManga.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:ApplManga"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ApplManga"
    Width="800"
    Height="600"
    Style="{StaticResource MetroWindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Style="{StaticResource GridDefaultStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!--Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </>
        <Rectangle Grid.Row="1" Style="{StaticResource RectangleDefaultStyle}" /-->
        <TabControl
            DisplayMemberPath="TabCaption"
            ItemsSource="{Binding ItemTabs, Mode=OneWay}"
            Style="{StaticResource TabControlStyle}" />
    </Grid>
</Window>